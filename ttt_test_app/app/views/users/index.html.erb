<h1>Players</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to "#{user.name}", user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) if can? :update, User %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, User %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path if can? :create, User  %>